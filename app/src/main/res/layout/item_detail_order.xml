<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_bouquet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="210dp"/>

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextView_14sp_medium"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            android:text="Букет Гармония "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_quantity"
            style="@style/TextView_14sp_medium"
            android:text="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline"/>

        <TextView
            android:id="@+id/tv_txt"
            style="@style/TextView_14sp_medium"
            android:layout_marginStart="2dp"
            android:text="шт."
            app:layout_constraintBottom_toBottomOf="@+id/tv_quantity"
            app:layout_constraintStart_toEndOf="@+id/tv_quantity"
            app:layout_constraintTop_toTopOf="@+id/tv_quantity" />

        <TextView
            android:id="@+id/tv_sum"
            style="@style/TextView_14sp_medium"
            android:layout_marginEnd="4dp"
            android:text="1500"
            app:layout_constraintBottom_toBottomOf="@+id/tv_txt2"
            app:layout_constraintEnd_toStartOf="@+id/tv_txt2"
            app:layout_constraintTop_toTopOf="@+id/tv_txt2" />

        <TextView
            android:id="@+id/tv_txt2"
            style="@style/TextView_14sp_medium"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/som"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>