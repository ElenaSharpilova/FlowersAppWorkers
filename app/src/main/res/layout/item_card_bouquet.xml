<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_bouquet"
    android:layout_width="156dp"
    android:layout_height="273dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_bouquet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bouquet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_bouquet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            style="@style/TextView_13sp_medium"
            android:text="Букет осенний блюз"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_bouquet" />

        <TextView
            android:id="@+id/tv_bouquet_description"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_horizontal"
            style="@style/TextView_11sp_medium"
            android:text="Розы, ромашки, лилии"
            app:layout_constraintEnd_toEndOf="@+id/tv_bouquet_name"
            app:layout_constraintStart_toStartOf="@+id/tv_bouquet_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_bouquet_name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="144dp"
            android:layout_height="32dp"
            android:layout_marginTop="17dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_bouquet_description"
            app:layout_constraintStart_toStartOf="@+id/tv_bouquet_description"
            app:layout_constraintTop_toBottomOf="@+id/tv_bouquet_description">

            <ImageButton
                android:id="@+id/btn_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_background_price"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/TextView_12sp_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="333"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/btn_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/btn_price"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/som"
                style="@style/TextView_12sp_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_price"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>